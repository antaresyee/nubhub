
<div id="signin_form_container">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="override_user_email">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="override_user_pass">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="override_user_remember">
      <%= f.check_box :remember_me %> <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div>
  	<%= f.submit "Sign in", class: "button override_signup_button signup_button" %>
  </div>
<% end %>
  <div class="horizontal_line"></div>
  <div id="devise_links">
    <%= render "devise/shared/links" %>
  </div>
</div>

