<%= gravatar_for(@user) %>
<%= gravatar_change(@user) %>

<p> Hello, <%= @user.name %> this is the user show page. 
	There's nothing here right now =( </p>

<p><%= link_to "Add new note", new_note_path %></p>
<br/>


<% if @user.notes.any? %>
	<p>Your <%= @user.notes.count %> Notes:</p>
	<ol class="nublist">
	<%= render @notes %>
	</ol>
	<%= will_paginate @notes %>
	<br/>
<% end %>

<% if @user.courses.any? %>
	<%= render @bookedCourses %>	
<% end %>